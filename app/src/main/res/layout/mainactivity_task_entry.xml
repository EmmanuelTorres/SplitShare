<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/entryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name of task"
        android:textAppearance="@android:style/TextAppearance.Material.Title"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="8dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/entryDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="mm/dd/yyyy"
        android:textAppearance="@android:style/TextAppearance.Material.Small"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent" />
    <TextView
        android:id="@+id/entryGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="group_name"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/entryTitle"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/entryCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$xx.yy"
        android:textAppearance="@android:style/TextAppearance.Material.Title"
        android:textColor="#00B203"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/entryTitle"
        android:layout_margin="8dp"

        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/entryGroup"/>


</android.support.constraint.ConstraintLayout>